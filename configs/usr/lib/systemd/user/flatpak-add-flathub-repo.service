[Unit]
Description=Add Flathub flatpak repositories
ConditionPathExists=!/%h/.local/share/flatpak/.flathub-initialized
Before=flatpak-session-helper.service
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/flatpak remote-add --user --if-not-exists --title "Flathub" flathub https://flathub.org/repo/flathub.flatpakrepo
ExecStartPost=/usr/bin/touch /%h/.local/share/flatpak/.flathub-initialized

[Install]
WantedBy=default.target